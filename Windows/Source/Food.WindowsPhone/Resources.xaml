<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:my="clr-namespace:PocketCampus.Food"
                    xmlns:myDesign="clr-namespace:PocketCampus.Food.ViewModels.Design;assembly=PocketCampus.Food"
                    xmlns:com="clr-namespace:PocketCampus.Common;assembly=PocketCampus.Common.WindowsPhone">
    <!-- Design-time DataContexts -->
    <myDesign:Design x:Key="Design" />
    
    <!-- Localized strings -->
    <my:LocalizedStrings x:Key="Strings" />

    <!-- Converters -->
    <com:EnumToLocalizedStringConverter x:Key="EnumToString"
                                        Strings="{StaticResource Strings}" />
    <com:NoElementsToVisibilityConverter x:Key="NoneToVisibility" />
    <my:PriceToStringConverter x:Key="PriceToString" />
    <my:MealToImageConverter x:Key="MealToImage" />
    <my:RestaurantsToGroupsConverter x:Key="RestaurantsToGroups" />
    <my:VoteCountToStringConverter x:Key="VoteCountToString" />
</ResourceDictionary>