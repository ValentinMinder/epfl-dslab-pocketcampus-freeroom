<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:com="clr-namespace:PocketCampus.Common;assembly=PocketCampus.Common.WindowsPhone"
                    xmlns:my="clr-namespace:PocketCampus.Transport"
                    xmlns:myDesign="clr-namespace:PocketCampus.Transport.ViewModels.Design;assembly=PocketCampus.Transport">
    <!-- Design-time DataContexts -->
    <myDesign:Design x:Key="Design" />
    
    <!-- Localized strings -->
    <my:LocalizedStrings x:Key="Strings" />

    <!-- Converters -->
    <com:EnumToLocalizedStringConverter x:Key="EnumToString"
                                        Strings="{StaticResource Strings}" />
    <com:EnumToVisibilityConverter x:Key="EnumToVisibility" />
    <my:DateToStringConverter x:Key="DateToString"
                              Format="HH:mm" />
</ResourceDictionary>