<Page x:Class="PocketCampus.Satellite.Views.MainView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:com="using:PocketCampus.Common"
      xmlns:my="using:PocketCampus.Satellite"
      xmlns:myDesign="using:PocketCampus.Satellite.ViewModels.Design"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      d:DataContext="{Binding Main, Source={StaticResource Design}}">
    <Page.Resources>
        <myDesign:Design x:Key="Design" />
        
        <com:StringFormatConverter x:Key="StringFormat" />
        <my:BeerMenuPartToGroupConverter x:Key="MenuPartToGroup" />

        <Style x:Key="StretchItemContainerStyle" TargetType="ContentPresenter">
            <Setter Property="HorizontalAlignment" Value="Stretch" />
        </Style>
        
        <Style x:Key="StretchListViewItemContainerStyle" TargetType="ListViewItem">
            <Setter Property="HorizontalAlignment" Value="Stretch" />
            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
        </Style>

        <DataTemplate x:Key="BeerTemplate">
            <Grid Margin="0,0,0,24">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                
                <TextBlock Text="{Binding Name}"
                           Style="{StaticResource BodyTextBlockStyle}" />
                
                <TextBlock Grid.Column="1"
                           Text="{Binding Price, Converter={StaticResource StringFormat}, ConverterParameter='{}{0:0.00} CHF'}"
                           Style="{StaticResource BodyTextBlockStyle}" />

                <TextBlock Grid.Row="1"
                           Style="{StaticResource BodyTextBlockStyle}"
                           FontSize="{StaticResource TextStyleMediumFontSize}"
                           Foreground="{StaticResource PhoneMidBrush}">
                    <Run Text="{Binding BreweryName}" />
                    <Run Text="{Binding CountryName, Converter={StaticResource StringFormat}, ConverterParameter='({0})'}" />
                </TextBlock>
                
                <TextBlock Grid.Row="1"
                           Grid.Column="1"
                           Text="{Binding AlcoholRate, Converter={StaticResource StringFormat}, ConverterParameter='{}{0:0.0}°'}"
                           Style="{StaticResource BodyTextBlockStyle}"
                           FontSize="{StaticResource TextStyleMediumFontSize}"
                           Foreground="{StaticResource PhoneMidBrush}"
                           HorizontalAlignment="Right"/>
            </Grid>
        </DataTemplate>
        
        <DataTemplate x:Key="BeerListHeaderTemplate">
            <TextBlock Text="{Binding Key}"
                       Style="{StaticResource GroupHeaderTextBlockStyle}"
                       Foreground="{ThemeResource PhoneForegroundBrush}" />
        </DataTemplate>
        
        <GroupStyle x:Key="BeerListGroupStyle"
                    HidesIfEmpty="True"
                    HeaderTemplate="{StaticResource BeerListHeaderTemplate}" />
        
        <DataTemplate x:Key="MenuPartTemplate">
            <SemanticZoom>
                <SemanticZoom.Resources>
                    <CollectionViewSource x:Key="BeerLists"
                                          Source="{Binding Value, Converter={StaticResource MenuPartToGroup}}"
                                          IsSourceGrouped="True" />
                </SemanticZoom.Resources>
                
                <SemanticZoom.ZoomedInView>
                    <ListView ItemsSource="{Binding Source={StaticResource BeerLists}}"
                              ItemTemplate="{StaticResource BeerTemplate}"
                              com:ListViewEx.GroupStyle="{StaticResource BeerListGroupStyle}"
                              ItemContainerStyle="{StaticResource StretchListViewItemContainerStyle}" />
                </SemanticZoom.ZoomedInView>
                
                <SemanticZoom.ZoomedOutView>
                    <ListView ItemsSource="{Binding Source={StaticResource BeerLists}}"
                              ItemTemplate="{StaticResource BeerListHeaderTemplate}" />
                </SemanticZoom.ZoomedOutView>
            </SemanticZoom>
        </DataTemplate>
        
        <DataTemplate x:Key="MenuPartHeaderTemplate">
            <TextBlock Text="{Binding Key}" />
        </DataTemplate>
    </Page.Resources>
    
    <Pivot ItemsSource="{Binding BeerMenu}"
           ItemTemplate="{StaticResource MenuPartTemplate}"
           HeaderTemplate="{StaticResource MenuPartHeaderTemplate}" />
</Page>