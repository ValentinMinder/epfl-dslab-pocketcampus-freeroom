<cc:PageBase x:Class="PocketCampus.Moodle.Views.CourseView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:i="using:Microsoft.Xaml.Interactivity"
             xmlns:c="using:PocketCampus.Common"
             xmlns:cc="using:PocketCampus.Common.Controls"
             xmlns:my="using:PocketCampus.Moodle"
             xmlns:myc="using:PocketCampus.Moodle.Controls"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DataContext="{Binding Course, Source={StaticResource Design}}"
             StatusBarText="{Binding DownloadStatus, 
                                     Converter={StaticResource EnumToString}}"
             StatusBarShowsProgress="{Binding DownloadStatus, 
                                              Converter={StaticResource DownloadStatusToBool}}">
    <cc:PageBase.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Resources.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <c:EnumToStringConverter x:Key="EnumToString" />
            <my:DownloadStatusToBooleanConverter x:Key="DownloadStatusToBool" />
            <my:FileToIconElementConverter x:Key="FileToIcon" />

            <DataTemplate x:Key="FileTemplate">
                <cc:SimpleButton Command="{Binding DataContext.OpenFileCommand, ElementName=Root}"
                                 CommandParameter="{Binding}"
                                 Margin="0,8,0,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>

                        <ContentControl Content="{Binding Converter={StaticResource FileToIcon}}" />

                        <TextBlock Grid.Column="1"
                                   Text="{Binding Name}"
                                   Style="{StaticResource AppLargeTextBlockStyle}"
                                   Margin="8,0,0,0" />
                    </Grid>
                </cc:SimpleButton>
            </DataTemplate>

            <DataTemplate x:Key="LinkTemplate">
                <cc:SimpleButton Command="{Binding DataContext.OpenLinkCommand, ElementName=Root}"
                                 CommandParameter="{Binding}"
                                 Margin="0,8,0,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="&#xE167;"
                                   FontFamily="Segoe UI Symbol"
                                   FontSize="{StaticResource TextStyleExtraLargeFontSize}" />
                        
                        <TextBlock Grid.Column="1"
                                   Text="{Binding Name}"
                                   Style="{StaticResource AppLargeTextBlockStyle}"
                                   Margin="8,0,0,0" />
                    </Grid>
                </cc:SimpleButton>
            </DataTemplate>

            <DataTemplate x:Key="FolderTemplate">
                <ToggleSwitch x:Name="Switch"
                              Style="{StaticResource AppHeaderedToggleSwitchStyle}"
                              Margin="0,8,0,0">
                    <ToggleSwitch.Header>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>

                            <!-- TODO open/closed folder icon -->
                            <TextBlock Text="&#xE188;"
                                       FontFamily="Segoe UI Symbol"
                                       FontSize="{StaticResource TextStyleExtraLargeFontSize}" />
                            
                            <TextBlock Grid.Column="1"
                                       Text="{Binding Name}"
                                       Style="{StaticResource AppLargeTextBlockStyle}"
                                       Margin="8,0,0,0" />
                        </Grid>
                    </ToggleSwitch.Header>
                    
                    <ToggleSwitch.OnContent>
                        <ItemsControl ItemsSource="{Binding Files}"
                                      ItemTemplate="{StaticResource FileTemplate}"
                                      Margin="19,0,0,0" />
                    </ToggleSwitch.OnContent>
                    
                    <ToggleSwitch.OffContent>
                        <!-- nothing -->
                        <Rectangle />
                    </ToggleSwitch.OffContent>
                </ToggleSwitch>
            </DataTemplate>

            <DataTemplate x:Key="ResourceTemplate">
                <myc:MoodleResourceControl Resource="{Binding}"
                                           FileTemplate="{StaticResource FileTemplate}"
                                           LinkTemplate="{StaticResource LinkTemplate}"
                                           FolderTemplate="{StaticResource FolderTemplate}" />
            </DataTemplate>
        </ResourceDictionary>
    </cc:PageBase.Resources>

    <Grid x:Name="Root">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <StackPanel Background="{StaticResource AppHeaderBackgroundBrush}">
            <TextBlock Text="{CustomResource PagesHeader}"
                       Style="{StaticResource AppHeaderTextBlockStyle}" />

            <TextBlock Text="{Binding Course.Name}"
                       Style="{StaticResource AppTitleTextBlockStyle}" />
        </StackPanel>

        <!-- TODO selected section binding
             TODO details -->
        <cc:GroupedItemsControl Grid.Row="1"
                                ItemTemplate="{StaticResource ResourceTemplate}"
                                GroupKeyPath="DisplayTitle"
                                Margin="19,0,0,0">
            <cc:GroupedItemsControl.ItemsViewSource>
                <CollectionViewSource Source="{Binding Sections}"
                                      IsSourceGrouped="True"
                                      ItemsPath="Resources" />
            </cc:GroupedItemsControl.ItemsViewSource>
        </cc:GroupedItemsControl>
        
        <cc:LoadingAndError Grid.Row="1" />
    </Grid>
</cc:PageBase>