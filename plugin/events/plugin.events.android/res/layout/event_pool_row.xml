<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/PocketCampusRow"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/event_thumbnail"
        style="@style/PocketCampusThumbnail"
        android:layout_width="50dip"
        android:layout_height="50dip" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_alignBottom="@+id/event_thumbnail_container"
        android:layout_alignTop="@+id/event_thumbnail_container"
        android:layout_toRightOf="@+id/event_thumbnail_container"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <!-- Title Of Song -->

        <TextView
            android:id="@+id/event_title"
            style="@style/PocketCampusListItemTitle"
            android:layout_marginRight="30dip"
            android:layout_marginTop="-5dip"
            android:text="Rihanna Love the way lie" />

        <!-- Artist Name -->

        <TextView
            android:id="@+id/event_place"
            style="@style/PocketCampusListItemSubTitle"
            android:layout_marginTop="1dip"
            android:text="Just gona stand there and ..." />
    </LinearLayout>

    <!-- Rightend Arrow -->

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/pocketcampus_list_arrow" />

</RelativeLayout>