<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    
    android:orientation="vertical"
     >

	    
	<LinearLayout  android:id="@+id/event_header_container" 
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content" 
	    android:orientation="horizontal">

		<ImageView     
		    android:background="@drawable/events_image_bg"
			android:id="@+id/event_list_complex_image"   
			android:padding="3dip"
			android:layout_marginLeft="2dip"
			android:layout_marginTop="1dip"
	        android:layout_width="100dip"
	        android:layout_height="100dip"/>
	
			    
			
		<LinearLayout  android:id="@+id/event_header_container" 
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content" 
		    android:orientation="vertical">
			    
			<!-- Title Of Song-->
		    <TextView
		        android:id="@+id/event_list_complex_title"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:gravity="left"
		        android:text="Rihanna Love the way lie Rihanna Love the way lie Rihanna Love the way lie Rihanna Love the way lie "
		        android:paddingLeft="5dip"
		        android:paddingRight="5dip"
		        android:textColor="#040404"
		        android:typeface="sans" 
		        android:layout_marginRight="0dip"
		        android:layout_marginTop="0dip"
		        android:textSize="20dip"
		        android:textStyle="bold"/>
		    
		    
			<!-- subtitle -->
		    <TextView
		        android:id="@+id/event_list_complex_subtitle"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:gravity="left"
		        android:text="Rihanna Love the way lie Rihanna Love the way lie Rihanna Love the way lie Rihanna Love the way lie "
		        android:paddingLeft="5dip"
		        android:paddingRight="5dip"
		        android:textColor="#040404"
		        android:typeface="sans" 
		        android:layout_marginRight="0dip"
		        android:layout_marginTop="15dip"
		        android:textSize="15dip"
		        android:textStyle="italic"/>
		    		
		</LinearLayout>
		
		
	</LinearLayout>
	

	<!-- Artist Name -->
    <TextView
        android:id="@+id/event_list_item_details"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/event_header_container"
        android:textColor="#343434"
        android:textSize="15dip"
        android:paddingLeft="5dip"
        android:paddingRight="5dip"
        android:layout_marginTop="0dip"
        android:layout_marginBottom="0dip"
        android:text="Just gona stand there and ..." />


    <ImageView  
        android:id="@+id/event_big_image"  
        android:layout_width="fill_parent"  
        android:layout_height="wrap_content"  
        />      
	
	<!-- Details -->
    <TextView
        android:id="@+id/event_list_complex_caption"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/event_list_item_details"
        android:textColor="#343434"
        android:textSize="15dip"
        android:paddingLeft="5dip"
        android:paddingRight="5dip"
        android:layout_marginTop="0dip"
        android:layout_marginBottom="0dip"
        android:text="Just gona stand there and ..." />
    
</LinearLayout>