<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:isScrollContainer="true" >
    
	<LinearLayout android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical" >
	
	    <TextView
	        android:id="@+id/sunrise_main_title"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center"
	        android:layout_marginBottom="0.1in"
	        android:layout_marginTop="0.2in"
	        android:text="@string/sunrise_send_sms_title" />
	
	    <EditText
	        android:id="@+id/sunrise_to_number"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginBottom="0.1in"
	        android:layout_marginLeft="0.2in"
	        android:layout_marginRight="0.2in"
	        android:hint="@string/sunrise_to_number"
	        android:inputType="number" />
	
	    <TextView
	        android:id="@+id/sunrise_main_remaining_free"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center"
	        android:layout_marginBottom="0.1in" />
	
	    <TextView
	        android:id="@+id/sunrise_main_char_counter"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center"
	        android:layout_marginBottom="0.1in" />
	    
	    <EditText
	        android:id="@+id/sunrise_message_contents"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginBottom="0.1in"
	        android:layout_marginLeft="0.2in"
	        android:layout_marginRight="0.2in"
	        android:hint="@string/sunrise_sms_contents"
	        android:inputType="textMultiLine" />
	
	    <Button
	        android:id="@+id/sunrise_button_send"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginBottom="0.1in"
	        android:layout_marginLeft="0.2in"
	        android:layout_marginRight="0.2in"
	        android:text="@string/sunrise_button_send" />
	
	</LinearLayout>
	
</ScrollView>
