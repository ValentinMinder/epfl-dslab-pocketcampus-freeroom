<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.pocketcampus.plugin.freeroom"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="8" />

    <application
        android:name="org.pocketcampus.android.platform.sdk.core.GlobalContext"
        android:icon="@drawable/building2x177"
        android:label="@string/app_name"
        android:theme="@style/PocketCampusTheme" >
        <activity
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:name="org.pocketcampus.plugin.freeroom.android.views.FreeRoomHomeView"
            android:launchMode="singleTask"
            android:icon="@drawable/building2x177"
            android:label="@string/freeroom_plugin_title"
            android:screenOrientation="nosensor" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />

                <action android:name="pocketcampus.intent.action.PLUGIN_MAIN" />
            </intent-filter>

            <!-- Communication with authentication plugin -->
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="freeroom.plugin.pocketcampus.org"
                    android:scheme="pocketcampus-authenticate" />
            </intent-filter>
        </activity>
        <activity
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:name="org.pocketcampus.plugin.freeroom.android.FreeRoomCourseSectionsView"
            android:screenOrientation="nosensor" />
        <activity
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:name="org.pocketcampus.plugin.freeroom.android.FreeRoomCourseSectionResourcesView"
            android:screenOrientation="nosensor" />
        <activity
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:name="org.pocketcampus.plugin.freeroom.android.FreeRoomEventsView"
            android:screenOrientation="nosensor" />
        <activity
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:name="org.pocketcampus.plugin.freeroom.android.FreeRoomCurrentWeekView"
            android:screenOrientation="nosensor" />
        <activity
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:name="org.pocketcampus.plugin.freeroom.android.FreeRoomSearchRoomsView"
            android:launchMode="singleTask"
            android:screenOrientation="nosensor" />
        <activity
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:name="org.pocketcampus.plugin.freeroom.android.FreeRoomSearchRoomsResultView"
            android:screenOrientation="nosensor" />
        <activity
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:name="org.pocketcampus.plugin.freeroom.android.FreeRoomCheckOccupancySearchView"
            android:launchMode="singleTask"
            android:screenOrientation="nosensor" />
        <activity
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:name="org.pocketcampus.plugin.freeroom.android.FreeRoomCheckOccupancyResultView"
            android:screenOrientation="nosensor" />
        <activity
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:name="org.pocketcampus.plugin.freeroom.android.FreeRoomManageFavoritesView"
            android:screenOrientation="nosensor" />
        <activity
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:name="org.pocketcampus.plugin.freeroom.android.FreeRoomHomeView"
            android:screenOrientation="nosensor" />
        
        <activity
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:name="org.pocketcampus.plugin.freeroom.android.views.FreeRoomSearchView"
            android:screenOrientation="nosensor" />

        <service
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:name="org.pocketcampus.plugin.freeroom.android.FreeRoomController" >
            <intent-filter>
                <action android:name="org.pocketcampus.plugin.authentication.AUTHENTICATION_FINISHED" />
                <action android:name="org.pocketcampus.plugin.authentication.LOGOUT" />

                <category android:name="org.pocketcampus.plugin.authentication" />

                <data
                    android:host="freeroom.plugin.pocketcampus.org"
                    android:scheme="pocketcampus" />
            </intent-filter>
        </service>

        <receiver android:name="org.pocketcampus.plugin.freeroom.android.FreeRoomController$Logouter" >
            <intent-filter>
                <action android:name="org.pocketcampus.plugin.authentication.LOGOUT" />
            </intent-filter>
        </receiver>
    </application>

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="org.pocketcampus.permissions.AUTHENTICATE_WITH_TEQUILA" />

</manifest>