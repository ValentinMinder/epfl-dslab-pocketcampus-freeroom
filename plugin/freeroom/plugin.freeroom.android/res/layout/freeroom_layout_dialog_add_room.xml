<?xml version="1.0" encoding="utf-8"?>
<!-- Layout for the add room dialog window. -->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/freeroom_layout_dialog_add_layout_main"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/background_light"
    android:orientation="vertical"
    android:padding="4dp" >

    <!-- headers for title and close button -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/background_light"
        android:orientation="horizontal" >

        <!-- Summary of selected rooms -->

        <TextView
            android:id="@+id/freeroom_layout_dialog_add_room_summary"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:text="@string/freeroom_dialog_add_room_init"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@android:color/black" />

        <!-- Button to go out (adding done) -->

        <Button
            android:id="@+id/freeroom_layout_dialog_add_room_done"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:text="@string/freeroom_dialog_add_room_add"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/black" />
    </LinearLayout>

    <!-- InputBar should be added programmatically here -->

</LinearLayout>