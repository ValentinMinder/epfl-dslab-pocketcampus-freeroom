<?xml version="1.0" encoding="utf-8"?>
<!-- Layout for the popup that enables the user to share his location with friends and server. -->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/darker_gray"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_margin="4dp"
        android:background="@android:color/background_light"
        android:orientation="vertical"
        android:padding="4dp" >

        <!-- Title of share popup -->

        <TextView
            android:id="@+id/freeroom_layout_popup_share_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:padding="6dip"
            android:text="@string/freeroom_popup_share_title"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@android:color/black" />

        <!-- Basic summary of what will be shared with friends -->

        <TextView
            android:id="@+id/freeroom_layout_popup_share_textBasic"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:padding="6dip"
            android:text="I will be in room ... "
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@android:color/black" />

        <!-- Edit text for additional personalized text for friends only -->

        <EditText
            android:id="@+id/freeroom_layout_popup_share_text_edit"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:hint="@string/freeroom_popup_share_textedit_hint"
            android:padding="6dip"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@android:color/black" />

        <!-- spinner to choose the course you're going to work on -->

        <Spinner
            android:id="@+id/freeroom_layout_popup_share_spinner_course"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

        <!-- Checkbox to choose if course chosen should be shared also with server -->

        <CheckBox
            android:id="@+id/freeroom_layout_popup_share_checkbox_server"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/freeroom_popup_share_checkbox_msg" />

        <!-- Button to share with your friends (and server) -->

        <Button
            android:id="@+id/freeroom_layout_popup_share_friends"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/freeroom_popup_share_button_friends"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@android:color/black" />

        <!-- Button to share only with the server -->

        <Button
            android:id="@+id/freeroom_layout_popup_share_server"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/freeroom_popup_share_button_server"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@android:color/black" />

        <!-- Disclaimer that explains what is shared to the server and why. -->

        <TextView
            android:id="@+id/freeroom_layout_popup_share_info"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:padding="6dip"
            android:text="@string/freeroom_popup_share_disclaimer"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@android:color/black" />
    </LinearLayout>

</LinearLayout>