<?xml version="1.0" encoding="utf-8"?>
<!-- Layout for header (building names) in home view, with collapse/extend/reduce capabilities. -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/freeroom_layout_roomslist"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="2dip" >

    <!-- Text to display the name of the room -->

    <TextView
        android:id="@+id/freeroom_layout_building_header_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginLeft="35dip"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@android:color/black" />

    <!-- Image to display less/more results (extend/reduce) -->

    <ImageView
        android:id="@+id/freeroom_layout_building_header_show_more"
        android:layout_width="30dip"
        android:layout_height="30dip"
        android:layout_alignParentRight="true"
        android:layout_marginRight="0dip"
        android:contentDescription="@string/freeroom_layout_building_header_show_more_img"
        android:src="@drawable/arrow_down" />

    <!-- Text to display the number of rooms available, or how many are left to display (reduce/extend) -->

    <TextView
        android:id="@+id/freeroom_layout_building_header_show_more_txt"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_toLeftOf="@id/freeroom_layout_building_header_show_more"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@android:color/black" />

</RelativeLayout>