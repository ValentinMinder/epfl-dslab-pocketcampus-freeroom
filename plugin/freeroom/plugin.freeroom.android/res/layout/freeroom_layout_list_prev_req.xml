<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/freeroom_layout_prev_req_remove"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="center_vertical"
        android:contentDescription="@string/freeroom_layout_prev_req_delete_img"
        android:padding="2dp"
        android:src="@drawable/ic_action_remove"
        android:visibility="visible" >
    </ImageView>

    <TextView
        android:id="@+id/freeroom_layout_prev_req_separator_1"
        style="@style/Vertical_Divider"
        android:layout_toLeftOf="@id/freeroom_layout_prev_req_remove"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <ImageView
        android:id="@+id/freeroom_layout_prev_req_edit"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_gravity="center_vertical"
        android:layout_toLeftOf="@id/freeroom_layout_prev_req_separator_1"
        android:contentDescription="@string/freeroom_layout_prev_req_edit_img"
        android:padding="2dp"
        android:src="@drawable/ic_action_edit"
        android:visibility="visible" >
    </ImageView>

    <TextView
        android:id="@+id/freeroom_layout_prev_req_separator_2"
        style="@style/Vertical_Divider"
        android:layout_toLeftOf="@id/freeroom_layout_prev_req_edit"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/freeroom_layout_prev_req_text"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center_vertical"
        android:layout_toLeftOf="@id/freeroom_layout_prev_req_separator_2"
        android:drawableLeft="@drawable/ic_action_next_item"
        android:gravity="left|center_vertical"
        android:maxLines="2"
        android:padding="2dp"
        android:text="mock text"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@android:color/darker_gray" />

</RelativeLayout>