<?xml version="1.0" encoding="utf-8"?>
<!-- Layout to hold room details in the popup info. -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/freeroom_layout_room_occupancies_details"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="2dip" >

    <!-- TextView to hold the time period -->
    
    <TextView
        android:id="@+id/freeroom_layout_details_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginLeft="5dip"
        android:text="text"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@android:color/black" />

    <!-- Image to say you're going to work there -->

    <ImageView
        android:id="@+id/freeroom_layout_details_share"
        android:layout_width="35dip"
        android:layout_height="35dip"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="right"
        android:layout_marginRight="5dip"
        android:contentDescription="@string/freeroom_layout_roomslist_img_share"
        android:src="@drawable/share" />

    <!-- Image to show how many people are working there -->

    <ImageView
        android:id="@+id/freeroom_layout_details_people"
        android:layout_width="35dip"
        android:layout_height="35dip"
        android:layout_alignParentTop="true"
        android:layout_marginRight="5dip"
        android:layout_toLeftOf="@id/freeroom_layout_details_share"
        android:contentDescription="@string/freeroom_layout_roomslist_img_people"
        android:src="@drawable/occupation_unknown" />

</RelativeLayout>