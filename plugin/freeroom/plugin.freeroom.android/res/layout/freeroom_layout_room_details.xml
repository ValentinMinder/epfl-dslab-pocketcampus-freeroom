<?xml version="1.0" encoding="utf-8"?>
<!-- Layout to hold room details in the popup info. -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/freeroom_layout_room_occupancies_details"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="2dip" >

    <!-- Image to say you're going to work there -->

    <ImageView
        android:id="@+id/freeroom_layout_details_share"
        android:layout_width="35dip"
        android:layout_height="35dip"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="right"
        android:contentDescription="@string/freeroom_layout_roomslist_img_share"
        android:src="@drawable/ic_action_share_enabled" />

    <ImageView
        android:id="@+id/freeroom_layout_details_separator_1"
        android:layout_width="3dp"
        android:layout_height="27dp"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="4dp"
        android:layout_toLeftOf="@id/freeroom_layout_details_share"
        android:contentDescription="@string/freeroom_layout_separator_dark"
        android:gravity="center"
        android:src="@drawable/separator_grey" />

    <!-- Image to show how many people are working there -->

    <ImageView
        android:id="@+id/freeroom_layout_details_people"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@id/freeroom_layout_details_separator_1"
        android:contentDescription="@string/freeroom_layout_roomslist_img_people"
        android:gravity="center"
        android:src="@drawable/occupation_unknown" />

    <ImageView
        android:id="@+id/freeroom_layout_details_separator_2"
        android:layout_width="3dp"
        android:layout_height="27dp"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="4dp"
        android:layout_toLeftOf="@id/freeroom_layout_details_people"
        android:contentDescription="@string/freeroom_layout_separator_dark"
        android:gravity="center"
        android:src="@drawable/separator_grey" />

    <!-- TextView to hold the time period -->

    <TextView
        android:id="@+id/freeroom_layout_details_text"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_toLeftOf="@id/freeroom_layout_details_separator_2"
        android:gravity="left|center_vertical"
        android:maxLines="1"
        android:text="mock time data"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@android:color/black" />

</RelativeLayout>