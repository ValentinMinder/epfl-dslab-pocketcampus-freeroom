<?xml version="1.0" encoding="utf-8"?>
<!-- Layout for home. -->

<org.pocketcampus.android.platform.sdk.ui.layout.StandardTitledLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/freeroom_layout_home_title_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/freeroom_layout_home_main_layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/freeroom_layout_home_text_summary"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@android:color/black" />
        
         <ExpandableListView
            android:id="@+id/freeroom_layout_home_list"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />
    </LinearLayout>

</org.pocketcampus.android.platform.sdk.ui.layout.StandardTitledLayout>