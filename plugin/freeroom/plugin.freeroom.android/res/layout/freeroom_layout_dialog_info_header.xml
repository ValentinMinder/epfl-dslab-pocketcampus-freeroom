<?xml version="1.0" encoding="utf-8"?>
<!-- Layout for the information popup header (list header) -->


<!-- headers contains the detailed time, a map and whole share icon -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/background_light"
    android:orientation="vertical"
    android:padding="2dp" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:background="@android:color/background_light"
        android:orientation="horizontal" >

        <!-- Image to say you're going to work there -->

        <ImageView
            android:id="@+id/freeroom_layout_dialog_info_share"
            android:layout_width="32dip"
            android:layout_height="32dip"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="right"
            android:contentDescription="@string/freeroom_layout_roomslist_img_share"
            android:src="@drawable/ic_action_share_enabled" />

        <TextView
            android:id="@+id/freeroom_layout_dialog_info_separator_1"
            style="@style/Vertical_Divider"
            android:layout_toLeftOf="@id/freeroom_layout_dialog_info_share" />

        <!-- Image to show the room on the map -->

        <ImageView
            android:id="@+id/freeroom_layout_dialog_info_people"
            android:layout_width="32dip"
            android:layout_height="32dip"
            android:layout_alignParentTop="true"
            android:layout_gravity="right"
            android:layout_toLeftOf="@id/freeroom_layout_dialog_info_separator_1"
            android:contentDescription="@string/freeroom_layout_roomslist_img_map"
            android:src="@drawable/ic_occupation_unknown" />

        <TextView
            android:id="@+id/freeroom_layout_dialog_info_separator_2"
            style="@style/Vertical_Divider"
            android:layout_toLeftOf="@id/freeroom_layout_dialog_info_people" />

        <!-- Image to show the room on the map -->

        <ImageView
            android:id="@+id/freeroom_layout_dialog_info_map"
            android:layout_width="32dip"
            android:layout_height="32dip"
            android:layout_alignParentTop="true"
            android:layout_gravity="right"
            android:layout_toLeftOf="@id/freeroom_layout_dialog_info_separator_2"
            android:contentDescription="@string/freeroom_layout_roomslist_img_map"
            android:src="@drawable/freeroom_map_icon" />

        <TextView
            android:id="@+id/freeroom_layout_dialog_info_separator_3"
            style="@style/Vertical_Divider"
            android:layout_toLeftOf="@id/freeroom_layout_dialog_info_map" />

        <!-- Text for the period of time -->

        <TextView
            android:id="@+id/freeroom_layout_dialog_info_period"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_toLeftOf="@id/freeroom_layout_dialog_info_separator_3"
            android:maxLines="2"
            android:text="MOCK Today 14:00 PM - 15:00 PM"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/black" />
    </RelativeLayout>

    <TextView
        android:id="@+id/freeroom_layout_dialog_info_separator_vert"
        style="@style/Horizontal_Divider" />

</LinearLayout>