<?xml version="1.0" encoding="utf-8"?>
<!-- Layout to display the selected room. -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="left"
    android:orientation="horizontal"
    android:padding="2dip" >

    <!-- Image to display and add/remove favorites -->

    <ImageView
        android:id="@+id/freeroom_layout_selected_remove"
        android:layout_width="35dip"
        android:layout_height="35dip"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:contentDescription="@string/freeroom_layout_roomslist_img_fav"
        android:src="@drawable/ic_action_remove" />

    <ImageView
        android:id="@+id/freeroom_layout_selected_separator_1"
        android:layout_width="3dp"
        android:layout_height="27dp"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="4dp"
        android:layout_toLeftOf="@id/freeroom_layout_selected_remove"
        android:contentDescription="@string/freeroom_layout_separator_dark"
        android:gravity="center"
        android:src="@drawable/separator_grey" />

    <!-- TextView to hold the name of the room -->

    <TextView
        android:id="@+id/freeroom_layout_selected_text"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="left"
        android:layout_toLeftOf="@id/freeroom_layout_selected_separator_1"
        android:text="mock room name"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@android:color/black" />

</RelativeLayout>