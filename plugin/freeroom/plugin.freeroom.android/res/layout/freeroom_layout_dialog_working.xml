<?xml version="1.0" encoding="utf-8"?>
<!-- Layout for the dialog that display what people are doing in this room. -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/background_light"
    android:orientation="vertical"
    android:padding="5dp" >

    <!-- HEADER is added there programmatically -->
    <!-- Title (working there...) and exact time -->

    <TextView
        android:id="@+id/freeroom_layout_dialog_working_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:text="@string/freeroom_whoIsWorking_title"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/freeroom_layout_dialog_working_time"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:text="MOCK Today 14:00 PM - 15:00 PM"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@android:color/black" />

    <!-- shows the message frequency in this room at this time -->

    <ListView
        android:id="@+id/freeroom_layout_dialog_working_time_list"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- FOOTER is added there programmatically -->
    <!-- State if the results are updating or up-to-date -->

    <TextView
        android:id="@+id/freeroom_layout_dialog_working_disclaimer"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:paddingTop="5dp"
        android:text="@string/freeroom_whoIsWorking_wait"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@android:color/darker_gray" />

</LinearLayout>