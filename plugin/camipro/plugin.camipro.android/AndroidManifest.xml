<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.pocketcampus.plugin.camipro"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="15" />

    <application
        android:name="org.pocketcampus.platform.android.core.GlobalContext"
        android:icon="@drawable/camipro_icon"
        android:label="@string/app_name"
        android:theme="@style/PocketCampusActionBarTheme" >
        <activity
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:name="org.pocketcampus.plugin.camipro.android.CamiproMainView"
            android:icon="@drawable/camipro_icon"
            android:label="@string/camipro_plugin_title"
            android:logo="@drawable/camipro_icon_white"
            android:screenOrientation="nosensor"
            android:uiOptions="splitActionBarWhenNarrow" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />

                <action android:name="pocketcampus.intent.action.PLUGIN_MAIN" />
            </intent-filter>

            <!-- Communication with authentication plugin -->
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="camipro.plugin.pocketcampus.org"
                    android:scheme="pocketcampus-authenticate" />
            </intent-filter>
        </activity>

        <service
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:name="org.pocketcampus.plugin.camipro.android.CamiproController" >
            <intent-filter>
                <action android:name="org.pocketcampus.plugin.authentication.AUTHENTICATION_FINISHED" />
                <action android:name="org.pocketcampus.plugin.authentication.LOGOUT" />

                <category android:name="org.pocketcampus.plugin.authentication" />

                <data
                    android:host="camipro.plugin.pocketcampus.org"
                    android:scheme="pocketcampus" />
            </intent-filter>
        </service>

        <activity
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:name="org.pocketcampus.plugin.camipro.android.CamiproStatsView"
            android:logo="@drawable/camipro_icon_white"
            android:screenOrientation="nosensor" >
        </activity>
        <activity
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:name="org.pocketcampus.plugin.camipro.android.CamiproCardRechargeView"
            android:logo="@drawable/camipro_icon_white"
            android:screenOrientation="nosensor" >
        </activity>

        <receiver android:name="org.pocketcampus.plugin.camipro.android.CamiproController$Logouter" >
            <intent-filter>
                <action android:name="org.pocketcampus.plugin.authentication.LOGOUT" />
            </intent-filter>
        </receiver>
    </application>

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="org.pocketcampus.permissions.AUTHENTICATE_WITH_TEQUILA" />

</manifest>