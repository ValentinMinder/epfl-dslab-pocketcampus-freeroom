<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/PocketCampusRow"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/isacademia_period_title"
        style="@style/PocketCampusListItemTitle"
        android:text="Math" />

    <TextView
        android:id="@+id/isacademia_period_type"
        style="@style/PocketCampusListItemSubTitle"
        android:text="Exercise" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/isacademia_period_time"
            style="@style/PocketCampusListItemSubTitle"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="left"
            android:text="15:00-17:00" />

        <TextView
            android:id="@+id/isacademia_period_room"
            style="@style/PocketCampusListItemSubTitle"
            android:layout_width="wrap_content"
            android:gravity="right"
            android:text="INM 200"
            android:textColor="@color/epfl_corrected_red" />
    </LinearLayout>

</LinearLayout>