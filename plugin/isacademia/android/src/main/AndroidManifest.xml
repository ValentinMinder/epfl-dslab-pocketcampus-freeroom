<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="org.pocketcampus.plugin.isacademia"
      android:versionCode="1"
      android:versionName="1.0">
    <uses-sdk android:minSdkVersion="15" />

    <application android:label="@string/app_name"
        android:theme="@style/PocketCampusActionBarTheme"
        android:icon="@drawable/isacademia_icon"
        android:name="org.pocketcampus.platform.android.core.GlobalContext">


		<activity android:name="org.pocketcampus.plugin.isacademia.android.IsAcademiaMainView"
			xmlns:android="http://schemas.android.com/apk/res/android"
			android:icon="@drawable/isacademia_icon"
			android:screenOrientation="nosensor"
			android:label="@string/isacademia_plugin_title"
			android:logo="@drawable/isacademia_icon_white"
            android:uiOptions="splitActionBarWhenNarrow">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
				<action android:name="pocketcampus.intent.action.PLUGIN_MAIN" />
			</intent-filter>


		</activity>


		<activity android:name="org.pocketcampus.plugin.isacademia.android.IsAcademiaGradesView"
				  xmlns:android="http://schemas.android.com/apk/res/android"
				  android:icon="@drawable/isacademia_icon"
				  android:screenOrientation="nosensor"
				  android:label="@string/isacademia_plugin_title"
				  android:logo="@drawable/isacademia_icon_white"
				  android:uiOptions="splitActionBarWhenNarrow">


		</activity>

		<!-- 		<activity android:name="org.pocketcampus.plugin.isacademia.android.IsAcademiaCourseView" -->
<!-- 		    android:screenOrientation="nosensor" -->
<!-- 			xmlns:android="http://schemas.android.com/apk/res/android" /> -->

<!-- 		<activity android:name="org.pocketcampus.plugin.isacademia.android.IsAcademiaFolderView" -->
<!-- 		    android:screenOrientation="nosensor" -->
<!-- 			xmlns:android="http://schemas.android.com/apk/res/android" /> -->

		<service android:name="org.pocketcampus.plugin.isacademia.android.IsAcademiaController"
			xmlns:android="http://schemas.android.com/apk/res/android">
			<intent-filter>
				<action android:name="org.pocketcampus.plugin.authentication.AUTHENTICATION_FINISHED" />
				<action android:name="org.pocketcampus.plugin.authentication.LOGOUT" />
				<category android:name="org.pocketcampus" />
				<data  android:scheme="pocketcampus" android:host="isacademia.plugin.pocketcampus.org" />
			</intent-filter>

		</service>



		<receiver android:name="org.pocketcampus.plugin.isacademia.android.IsAcademiaController$Logouter" >
            <intent-filter>
                <action android:name="org.pocketcampus.plugin.authentication.LOGOUT" />
            </intent-filter>
        </receiver>

		<receiver android:name="org.pocketcampus.plugin.isacademia.android.IsAcademiaController$AuthListener" >
            <intent-filter>
                <action android:name="org.pocketcampus.plugin.authentication.AUTHENTICATION_FINISHED" />
            </intent-filter>
        </receiver>

	</application>


	<uses-permission android:name="android.permission.INTERNET" />
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

	<uses-permission android:name="org.pocketcampus.permissions.AUTHENTICATE_WITH_TEQUILA" />

</manifest>
