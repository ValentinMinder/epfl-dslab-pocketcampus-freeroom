<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/satellite_affluence_image_view_layout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="6dip" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/satellite_affluence_image_view_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignWithParentIfMissing="true"
                android:layout_centerHorizontal="true"
                android:layout_centerInParent="true"
                android:text="Name"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/satellite_affluence_image_view_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="5dip"
                android:layout_below="@id/satellite_affluence_image_view_title"
                android:layout_centerHorizontal="true" 
                android:layout_centerInParent="true" />

            <TextView
                android:id="@+id/satellite_affluence_image_view_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:layout_centerInParent="true"
                android:layout_below="@id/satellite_affluence_image_view_image"
                android:padding="5dip"
                android:text="Description"
                android:textColor="@color/black" />
        </RelativeLayout>

</RelativeLayout>