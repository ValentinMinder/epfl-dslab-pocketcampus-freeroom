<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"

    android:orientation="horizontal"
    android:padding="5dip" >

	<!--  ListRow Left sied Thumbnail image -->
	<LinearLayout android:id="@+id/edx_thumbnail_container" 
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:padding="3dip"		
        android:layout_alignParentLeft="true"
        android:background="@drawable/edx_image_bg" 
	    android:layout_marginRight="5dip">
        
		<ImageView     
			android:id="@+id/edx_thumbnail"   
	        android:layout_width="50dip"
	        android:layout_height="50dip"/>
        
	</LinearLayout>
    
	<!-- Title Of Song-->
    <TextView
        android:id="@+id/edx_title"
        android:singleLine="true"
        android:scrollHorizontally="true"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/edx_thumbnail_container"
        android:layout_toRightOf="@+id/edx_thumbnail_container"
        android:text="Rihanna Love the way lie"
        android:textColor="#040404"
        android:typeface="sans" 
        android:layout_marginRight="30dip"
        android:layout_marginTop="-5dip"
        android:textSize="18dip"
        android:textStyle="bold"/>

	<!-- Artist Name -->
    <TextView
        android:id="@+id/edx_speaker"
        android:singleLine="true"
        android:scrollHorizontally="true"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edx_title"
        android:textColor="#343434"
        android:textSize="13dip"
        android:layout_marginTop="1dip"
        android:layout_marginRight="15dip"
        android:layout_toRightOf="@+id/edx_thumbnail_container"
        android:text="Just gona stand there and ..." />

	<!-- Rightend Duration -->
    <TextView
        android:id="@+id/edx_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@id/edx_thumbnail_container"
        android:gravity="right"
        android:text="5:45"
        android:layout_marginRight="5dip"
        android:textSize="13dip"
        android:textColor="#10bcc9"
        android:textStyle="bold"/>
      
     <!-- Rightend Arrow -->    
     <ImageView android:layout_width="wrap_content"
     	android:layout_height="wrap_content"
     	android:src="@drawable/edx_arrow"
     	android:layout_alignParentRight="true"
     	android:layout_centerVertical="true"/>
     
     <!-- android:src="@android:drawable/star_off" -->
     <ImageView
         android:id="@+id/edx_fav_star"
         android:layout_width="25dip"
         android:layout_height="25dip"
         android:layout_marginTop="-3dip"
         android:layout_alignParentRight="true"
         android:layout_alignParentTop="true"
          />
     
</RelativeLayout>