<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dip" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/news_item_image"
            android:layout_width="192dip"
            android:layout_height="108dip" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <!-- Title Of Song -->

            <TextView
                android:id="@+id/news_item_title"
                style="@style/PocketCampusListItemTitle"
                android:layout_marginRight="0dip"
                android:layout_marginTop="0dip"
                android:maxLines="100"
                android:text="Rihanna Love the way lie Rihanna Love the way lie Rihanna Love the way lie Rihanna Love the way lie " />

            <!-- subtitle -->

            <TextView
                android:id="@+id/news_item_feed_name"
                style="@style/PocketCampusListItemSubTitle"
                android:maxLines="100"
                android:text="Rihanna Love the way lie Rihanna Love the way lie Rihanna Love the way lie Rihanna Love the way lie " />
        </LinearLayout>
    </LinearLayout>

    <!-- Artist Name -->

    <TextView
        android:id="@+id/news_item_details"
        style="@style/PocketCampusListItemSubTitle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Just gona stand there and ..." />

    <ImageView
        android:id="@+id/news_item_big_image"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter" />

    <!-- Details -->

    <TextView
        android:id="@+id/news_item_body"
        style="@style/PocketCampusListItemSubTitle"
        android:maxLines="1000"
        android:text="Just gona stand there and ..." />

</LinearLayout>