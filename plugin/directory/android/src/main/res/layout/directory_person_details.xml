<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/PocketCampusRow"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/directory_person_details_picture"
            style="@style/PocketCampusThumbnail"
            android:layout_width="80dip"
            android:layout_height="wrap_content"
            android:maxHeight="300dip"
            android:src="@drawable/sdk_empty_person"
            android:adjustViewBounds="true" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <!-- Title Of Song -->

            <TextView
                android:id="@+id/directory_person_details_name"
                style="@style/PocketCampusListItemTitle"
                android:maxLines="1000"
                android:text="@string/actionbar_activity_not_found" />

            <!-- subtitle -->

            <TextView
                android:id="@+id/directory_person_details_affiliation"
                style="@style/PocketCampusListItemSubTitle"
                android:layout_marginTop="5dip"
                android:maxLines="1000"
                android:text="@string/actionbar_activity_not_found" />
        </LinearLayout>
    </LinearLayout>

    <!-- subtitle -->

    <TextView
        android:id="@+id/directory_person_details_expanded_affiliation"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dip"
        android:layout_marginTop="0dip"
        android:gravity="left"
        android:paddingLeft="7dip"
        android:paddingRight="7dip"
        android:text="@string/actionbar_activity_not_found"
        android:textColor="#040404"
        android:textSize="15sp"
        android:typeface="sans" />

</LinearLayout>