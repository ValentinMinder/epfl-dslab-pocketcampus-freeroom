<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.pocketcampus"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="8" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:label="@string/app_name"
        android:name="org.pocketcampus.android.platform.sdk.core.GlobalContext"
        android:theme="@style/PocketCampusTheme" >

        <!-- Directory Plugin -->
        <activity
            android:label="Directory"
             android:icon="@drawable/directory_icon"
            android:name="org.pocketcampus.plugin.directory.android.DirectorySearchView" >
            <intent-filter >
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />

                <action android:name="pocketcampus.intent.action.PLUGIN_MAIN" />
            </intent-filter>
        </activity>
        <activity android:name="org.pocketcampus.plugin.directory.android.DirectoryResultListView" >
        </activity>
        <activity android:name="org.pocketcampus.plugin.directory.android.DirectoryFilterOUView" >
        </activity>

        <service
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:name="org.pocketcampus.plugin.directory.android.DirectoryController" >
        </service>
    </application>

</manifest>