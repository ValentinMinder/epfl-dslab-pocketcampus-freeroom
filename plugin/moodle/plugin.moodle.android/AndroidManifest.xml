<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="org.pocketcampus.plugin.moodle"
      android:versionCode="1"
      android:versionName="1.0">
    <uses-sdk android:minSdkVersion="8" />

    <application android:label="@string/app_name"
        android:theme="@style/PocketCampusTheme" android:name="org.pocketcampus.android.platform.sdk.core.GlobalContext">
        
        
		<activity android:name="org.pocketcampus.plugin.moodle.android.MoodleMainView"
			xmlns:android="http://schemas.android.com/apk/res/android"
			android:icon="@drawable/moodle_icon"
			android:label="@string/moodle_plugin_title">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
				<action android:name="pocketcampus.intent.action.PLUGIN_MAIN" />
			</intent-filter>
			
			    
			    
			    
			    
<!-- 			Communication with authentication plugin     -->
			<intent-filter>
				<action android:name="android.intent.action.VIEW" />
				<category android:name="android.intent.category.DEFAULT" />
				<category android:name="android.intent.category.BROWSABLE" />
				<data android:scheme="pocketcampus-authenticate" android:host="moodle.plugin.pocketcampus.org" />
			</intent-filter>
			
			    			    
			    
			    
			    
			    
			    
			    
			    
			    
			    
			    
			    
			    
			    
			    
		</activity>
		<service android:name="org.pocketcampus.plugin.moodle.android.MoodleController"
			xmlns:android="http://schemas.android.com/apk/res/android"></service>
            
		
	</application>
    
        
	<uses-permission android:name="android.permission.INTERNET" />
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
		
</manifest>