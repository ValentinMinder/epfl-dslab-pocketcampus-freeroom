<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <fragment
        android:id="@+id/map_main_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        class="com.google.android.gms.maps.SupportMapFragment" />
    
    <EditText
        android:id="@+id/map_search_edittext"
        android:hint="@string/map_search"
        android:background="@drawable/map_round_edittext"
        android:imeOptions="actionSearch"
        android:inputType="text"
        android:layout_height="wrap_content"
        android:padding="10dip"
        android:layout_margin="10dip"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" 
        />

    <ScrollView
        android:id="@+id/map_extra_settings"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#cfff"
            android:orientation="vertical"
            android:paddingRight="5dp" >

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:checked="false"
                android:onClick="toggleOsm"
                android:text="@string/map_osm" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:checked="true"
                android:onClick="toggleEpflLabels"
                android:text="@string/map_epfl_labels" />

            <Spinner
                android:id="@+id/map_layers_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onTrafficToggled"
                android:checked="false"
                android:text="@string/map_traffic" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onMyLocationToggled"
                android:checked="true"
                android:text="@string/map_my_location" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:onClick="onBuildingsToggled"
                android:text="@string/map_buildings" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:onClick="onIndoorToggled"
                android:text="@string/map_indoor" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>