<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/PocketCampusRow"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal" >

        <TextView
            style="@style/PocketCampusListItemTitle"
            android:layout_width="wrap_content"
            android:text="@string/transport_departure_from" />

        <TextView
            android:id="@+id/transport_departure_station"
            style="@style/PocketCampusListItemTitle"
            android:text="EPFL"
            android:textColor="@color/epfl_corrected_red" />
    </LinearLayout>

    <ListView
        android:id="@+id/transport_departure_times_list"
        style="@style/PocketCampusListViewStyle" >
    </ListView>

</LinearLayout>