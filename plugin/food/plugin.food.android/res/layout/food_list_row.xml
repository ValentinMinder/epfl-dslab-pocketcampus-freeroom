<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="5dip" >

	<!--  ListRow Left sied Thumbnail image -->
	<LinearLayout android:id="@+id/food_thumbnail_container" 
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:padding="0dip"		
        android:layout_alignParentLeft="true"
        android:background="@drawable/food_image_bg" 
	    android:layout_marginRight="5dip">
        
		<ImageView     
			android:id="@+id/food_thumbnail"   
			android:src="@drawable/food_smiley_happy"
	        android:layout_width="50dip"
	        android:layout_height="50dip"/>
        
	</LinearLayout>
    
	<!-- Title Of Song-->
    <TextView
        android:id="@+id/food_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/food_thumbnail_container"
        android:layout_toRightOf="@+id/food_thumbnail_container"
        android:text="Rihanna Love the way lie Rihanna Love the way lie"
        android:textColor="#040404"
        android:typeface="sans" 
        android:layout_marginRight="30dip"
        android:layout_marginTop="-5dip"
        android:textSize="18dip"
        android:textStyle="bold"/>

	<!-- Artist Name -->
    <TextView
        android:id="@+id/food_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/food_title"
        android:textColor="#343434"
        android:textSize="13dip"
        android:layout_marginTop="1dip"
        android:layout_marginRight="15dip"
        android:layout_toRightOf="@+id/food_thumbnail_container"
        android:layout_toLeftOf="@+id/food_price"
        android:text="Just gona stand there and ..." />

	<!-- Rightend Duration -->
      
     <!-- Rightend Arrow -->    

     
     
    <TextView
        android:id="@+id/food_price"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/food_thumbnail_container"
        android:layout_alignLeft="@+id/food_thumbnail_container"
         android:layout_below="@+id/food_thumbnail_container"
        android:gravity="center_horizontal"
        android:text="5:45"
        android:layout_marginRight="5dip"
        android:textSize="13dip"
        android:textColor="#e40404"
        android:textStyle="bold"/>
     
     
     
     <!-- android:src="@android:drawable/star_off" -->
     <TextView
         android:id="@+id/food_meal_satisfaction"
         android:text="satisfaction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:textSize="13dip"
        android:textStyle="bold"
        android:textColor="#040404"
         android:layout_toRightOf="@+id/food_thumbnail_container"
         android:layout_below="@+id/food_description"
         android:layout_alignParentBottom="true"
          />


     <TextView
         android:id="@+id/food_meal_vote"
         android:text="vote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:gravity="right"
        android:textSize="13dip"
        android:textColor="#e40404"
        android:textStyle="bold"
         android:layout_toRightOf="@+id/food_meal_satisfaction"
         android:layout_alignParentBottom="true"
          />
     
     
</RelativeLayout>