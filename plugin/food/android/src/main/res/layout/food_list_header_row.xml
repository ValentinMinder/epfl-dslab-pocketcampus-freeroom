<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/PocketCampusRow"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/food_list_header_title"
            style="@style/PocketCampusListSectionHeader"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="Restaurant" />

        <TextView
            android:id="@+id/food_list_header_map"
            style="@style/PocketCampusListSectionHeader"
            android:layout_width="wrap_content"
            android:text="Voir sur plan"
            android:textAllCaps="false"
            android:textColor="@color/epfl_corrected_red" />
    </LinearLayout>

    <TextView
        android:id="@+id/food_list_header_satisfaction"
        style="@style/PocketCampusListItemSubTitle"
        android:layout_weight="1"
        android:paddingLeft="5dp"
        android:text="Alo" />

</LinearLayout>