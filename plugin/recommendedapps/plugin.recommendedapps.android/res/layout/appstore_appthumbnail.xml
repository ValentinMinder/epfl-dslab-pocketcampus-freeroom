<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:layout_height="150dp"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/recommendedAppLogo"
        style="@style/PocketCampusThumbnail"
        android:layout_width="50dip"
        android:layout_height="50dip"
        android:layout_gravity="top" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/recommendedAppName"
            style="@style/PocketCampusListItemTitle"
            android:layout_width="match_parent"
            android:text="App name" />

        <TextView
            android:id="@+id/recommendedAppDescription"
            style="@style/PocketCampusListItemSubTitle"
            android:layout_width="match_parent"
            android:maxLines="5"
            android:text="App\ndescription" />
    </LinearLayout>

</LinearLayout>