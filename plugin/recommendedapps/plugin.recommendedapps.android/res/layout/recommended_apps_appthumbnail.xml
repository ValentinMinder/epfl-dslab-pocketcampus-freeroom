<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="110dp"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/recommendedAppLogo"
            style="@style/PocketCampusThumbnail"
            android:layout_width="48dip"
            android:layout_height="48dip"
            android:layout_gravity="top"
            android:src="@drawable/recommendedapps_icon" />

        <TextView
            android:id="@+id/recommendedAppName"
            style="@style/PocketCampusListItemTitle"
            android:layout_width="match_parent"
            android:text="App name" />
    </LinearLayout>

    <TextView
        android:id="@+id/recommendedAppDescription"
        style="@style/PocketCampusListItemSubTitle"
        android:layout_width="match_parent"
        android:maxLines="3"
        android:paddingLeft="5dip"
        android:text="Best App ever\nIt makes the other apps look silly\nDoesn&apos;t it?\nDon&apos;t you think so?\nI do" />

</LinearLayout>