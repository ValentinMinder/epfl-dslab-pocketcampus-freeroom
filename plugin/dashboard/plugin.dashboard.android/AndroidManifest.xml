<?xml version="1.0" encoding="utf-8"?>

<manifest
	xmlns:android="http://schemas.android.com/apk/res/android"
	package="org.pocketcampus.android.plugin.dashboard">

	<uses-sdk
		android:minSdkVersion="8" />
	
	<application
		android:label="@string/app_name"
		android:theme="@style/PocketCampusTheme"
		android:name="org.pocketcampus.android.platform.sdk.core.GlobalContext">
	
		<activity
			android:name=".DashboardView"
			android:label="dashboard"
			android:icon="@drawable/dashboard_icon">
			<intent-filter>
				<action
					android:name="android.intent.action.MAIN" />
				<category
					android:name="android.intent.category.LAUNCHER" />
				<action
					android:name="pocketcampus.intent.action.PLUGIN_MAIN" />
			</intent-filter>
		</activity>
			
	</application>
	
</manifest>