<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.pocketcampus.plugin.authentication"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="15" />

    <application
        android:name="org.pocketcampus.platform.android.core.GlobalContext"
        android:icon="@drawable/authentication_icon"
        android:label="@string/app_name"
        android:theme="@style/PocketCampusActionBarTheme" >
        <activity
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:name="org.pocketcampus.plugin.authentication.android.AuthenticationView"
            android:excludeFromRecents="true"
            android:icon="@drawable/app_icon"
            android:label="@string/authentication_plugin_title"
            android:logo="@drawable/authentication_icon_white"
            android:launchMode="singleTask"
            android:screenOrientation="nosensor"
            android:theme="@style/PocketCampusActionBarTheme"
            android:windowSoftInputMode="adjustResize|stateVisible" >

            <!-- <intent-filter> -->
            <!-- <action android:name="android.intent.action.MAIN" /> -->
            <!-- <category android:name="android.intent.category.LAUNCHER" /> -->
            <!-- <action android:name="pocketcampus.intent.action.PLUGIN_MAIN" /> -->
            <!-- </intent-filter> -->


            <!-- Communication with other plugins -->
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="authentication.plugin.pocketcampus.org"
                    android:scheme="pocketcampus-authenticate" />
                <!-- <category android:name="android.intent.category.DEFAULT" /> -->
                <!-- <action android:name="pocketcampus.intent.action.AUTHENTICATION_LAUNCH" /> -->
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="tequila.epfl.ch"
                    android:path="/cgi-bin/tequila/requestauth"
                    android:scheme="https" />
                <data
                    android:host="tequila.epfl.ch"
                    android:path="/tequila/auth"
                    android:scheme="https" />
            </intent-filter>

            <!-- Communication with Tequila -->
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="login.pocketcampus.org"
                    android:scheme="pocketcampus-redirect" />
            </intent-filter>
        </activity>
        <activity
            android:name="org.pocketcampus.plugin.authentication.android.AuthenticationStatusView"
            android:screenOrientation="nosensor" >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="authentication.plugin.pocketcampus.org"
                    android:pathPrefix="/status"
                    android:scheme="pocketcampus" />
            </intent-filter>
        </activity>

        <service
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:name="org.pocketcampus.plugin.authentication.android.AuthenticationController"
            android:permission="org.pocketcampus.permissions.AUTHENTICATE_WITH_TEQUILA" >
            <intent-filter>
                <action android:name="org.pocketcampus.plugin.authentication.ACTION_AUTHENTICATE" />

                <category android:name="org.pocketcampus.plugin.authentication" />

                <data
                    android:host="authentication.plugin.pocketcampus.org"
                    android:scheme="pocketcampus" />
            </intent-filter>
        </service>
    </application>

    <permission-group
        android:name="org.pocketcampus.permission_groups.AUTHENTICATION"
        android:description="@string/authentication_permission_group_description"
        android:icon="@drawable/authentication_icon"
        android:label="@string/authentication_permission_group_label" />

    <permission
        android:name="org.pocketcampus.permissions.AUTHENTICATE_WITH_TEQUILA"
        android:description="@string/authentication_permission_description"
        android:icon="@drawable/authentication_icon"
        android:label="@string/authentication_permission_label"
        android:permissionGroup="org.pocketcampus.permission_groups.AUTHENTICATION"
        android:protectionLevel="signature" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="org.pocketcampus.permissions.AUTHENTICATE_WITH_TEQUILA" />

</manifest>