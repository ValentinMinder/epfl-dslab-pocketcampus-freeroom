<?xml version="1.0" encoding="utf-8"?>

<resources>
	
	<!-- Unmodifiable Style Elements -->
	<style name="PocketCampusThemeBase" parent="android:style/Theme.Light">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:windowNoTitle">true</item>
		<item name="android:fastScrollEnabled">false</item>
		<item name="android:windowBackground">@color/white</item>
	</style>
	
	<!-- Common Style Elements -->
	<style name="PocketCampusTheme" parent="PocketCampusThemeBase">
		<!-- To be extended from the launcher. -->
	</style>
	
	<!-- The Primary colors are used for the header and other elements that are visually "on top" of the interface -->
	<style name="PocketCampusTheme.Primary">
		<item name="android:background">@color/blue</item>
		<item name="android:textColor">@color/white</item>
	</style>
	
	<style name="PocketCampusTheme.Primary.Title">
		<item name="android:textAppearance">@android:style/TextAppearance.Large</item>
	</style>
	
	<style name="PocketCampusTheme.Primary.Subtitle">
		<item name="android:textAppearance">@android:style/TextAppearance.Small</item>
	</style>
	
	<!-- Secondary colors are used for the normal layouts parts. -->
	<style name="PocketCampusTheme.Secondary">
		<item name="android:background">@color/transparent</item>
		<item name="android:textColor">@color/black</item>
	</style>
	
	<style name="PocketCampusTheme.Secondary.MainLayout">
	</style>
	
	<style name="PocketCampusTheme.Secondary.Title">
		<item name="android:textAppearance">@android:style/TextAppearance.Large</item>
	</style>
	
	<style name="PocketCampusTheme.Secondary.Detail">
		<item name="android:textAppearance">@android:style/TextAppearance.Small</item>
		<!-- <item name="android:textColor">@color/darker_gray</item> -->
	</style>
	
</resources>
