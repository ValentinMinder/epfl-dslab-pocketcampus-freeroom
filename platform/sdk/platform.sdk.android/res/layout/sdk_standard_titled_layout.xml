<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sdk_standard_layout_main"
    style="@style/PocketCampusTheme.Secondary.MainLayout"
    android:layout_height="fill_parent" >

    <TextView
        android:id="@+id/sdk_standard_titled_layout_title"
        style="@style/PocketCampusTheme.Secondary.Title" />
    
    <TextView
        android:id="@+id/sdk_standard_titled_layout_msg"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:textSize="@dimen/centered_message_size"
        android:visibility="gone" >
    </TextView>

    <RelativeLayout
        android:id="@+id/sdk_standard_titled_layout_filler"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/sdk_standard_titled_layout_title" >
    </RelativeLayout>

</RelativeLayout>