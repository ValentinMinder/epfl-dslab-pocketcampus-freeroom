<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/sdk_popup_main"
	android:gravity="center_horizontal"
	style="@style/PocketCampusTheme.Secondary.MainLayout"
	android:padding="15dip"
	>
	
	<!-- style="@style/PocketCampusTheme.Secondary.Title" -->
	<TextView 
		android:id="@+id/sdk_popup_title"
		style="@style/PocketCampusTheme.Secondary.Title"
		android:textSize="27dip"
		android:layout_width="wrap_content"
		android:layout_centerHorizontal="true"
		/>
		
	<ScrollView 
		android:id="@+id/sdk_popup_scrollview"
		android:layout_below="@+id/sdk_popup_title"
		android:layout_width="wrap_content"
		android:layout_centerHorizontal="true"
		>
		<TextView
			android:id="@+id/sdk_popup_details"
			style="@style/PocketCampusTheme.Secondary.Detail"
			android:layout_width="wrap_content"
			android:layout_centerHorizontal="true"
			/>
	</ScrollView>
	
	<RelativeLayout
		android:id="@+id/sdk_popup_content"
		style="@style/PocketCampusTheme.Secondary"
		android:layout_width="wrap_content"
		android:layout_below="@+id/sdk_popup_scrollview"
		android:layout_centerHorizontal="true"
		android:paddingTop="10dip"
		/>
	
	<LinearLayout
		android:id="@+id/sdk_popup_buttons"
		style="@style/PocketCampusTheme.Secondary"
		android:layout_width="wrap_content"
		android:orientation="horizontal"
		android:layout_centerHorizontal="true"
		android:layout_below="@+id/sdk_popup_content"
		android:paddingTop="20dip"
		/>

</RelativeLayout>