<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- the theme applied to the application or activity -->
    <style name="PocketCampusActionBarTheme" parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/PocketCampusActionBar</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fastScrollEnabled">false</item>
        <item name="android:windowActionBar">true</item>
        <item name="android:windowBackground">@color/white</item>
    </style>

    <!-- ActionBar styles -->
    <style name="PocketCampusActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/epfl_corrected_red</item>
    </style>

    <style name="PocketCampusListSectionHeader" parent="@android:attr/listSeparatorTextViewStyle">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">35dip</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:background">@color/white</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingBottom">2dip</item>
        <item name="android:paddingLeft">5dip</item>
        <item name="android:paddingTop">2dip</item>
        <item name="android:textColor">@color/epfl_darkgrey</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="PocketCampusListItemSubTitle">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">3dip</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:textColor">#343434</item>
        <item name="android:textSize">18sp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:typeface">sans</item>
        <item name="android:maxLines">1</item>
        <item name="android:layout_marginRight">10dip</item>
    </style>

    <style name="PocketCampusListItemTitle">
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
        <item name="android:typeface">sans</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">3dip</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:textColor">#040404</item>
        <item name="android:textSize">22sp</item>
        <item name="android:layout_marginRight">10dip</item>
    </style>

    <style name="PocketCampusRow">
        <item name="android:padding">10dip</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="PocketCampusListViewStyle">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:divider">@color/white</item>
        <item name="android:dividerHeight">1dp</item>
        <item name="android:listSelector">@drawable/pocketcampus_list_selector</item>
    </style>
    
    <style name="PocketCampusThumbnail">
        <item name="android:layout_marginRight">10dip</item>
    </style>

</resources>