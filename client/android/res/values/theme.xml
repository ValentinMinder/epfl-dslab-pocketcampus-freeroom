<?xml version="1.0" encoding="utf-8"?>

<resources>
	<!-- EPFL Theme -->
	<style name="Theme" parent="android:Theme.Light">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textColor">#FF444444</item>
		<item name="android:fastScrollEnabled">true</item>
		<item name="android:windowNoTitle">true</item>
		<item name="android:windowBackground">@android:color/white</item>
	</style>

	<style name="Theme.BottomBar">
		<item name="android:background">#FFCC0000</item>
	</style>

	<style name="Theme.MainLayout">
		<item name="android:background">#FFFFFFFF</item>
	</style>

	<style name="Theme.ListView">
		<item name="android:cacheColorHint">#00000000</item>
	</style>

	<style name="Theme.BoldHeader">
		<item name="android:textSize">16dp</item>
		<item name="android:textStyle">bold</item>
		<item name="android:paddingTop">10dp</item>
	</style>
</resources>