<?xml version="1.0" encoding="utf-8"?>

<LinearLayout android:layout_width="match_parent"
	android:layout_height="match_parent" android:orientation="vertical"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:background="#FFFFFF">

	<RelativeLayout android:layout_gravity="clip_horizontal"
		android:orientation="horizontal" android:id="@+id/news_item_texts"
		android:layout_width="fill_parent" android:layout_margin="5dip"
		android:layout_height="wrap_content">

		<ProgressBar android:id="@+id/spinner"
			android:layout_height="wrap_content" android:layout_width="wrap_content"
			android:indeterminate="true"></ProgressBar>

		<TextView android:text="Loading..." android:layout_toRightOf="@+id/spinner"
			android:layout_centerInParent="true" android:layout_height="fill_parent"
			android:layout_width="fill_parent" android:paddingLeft="15dip"
			android:textSize="20sp" android:textColor="@color/black"
			android:layout_weight="1">
		</TextView>

	</RelativeLayout>

</LinearLayout>
