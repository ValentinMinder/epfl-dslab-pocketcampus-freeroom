<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:orientation="vertical"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:background="#FFFFFF">
    <LinearLayout android:layout_width="fill_parent" android:orientation="horizontal" android:layout_gravity="clip_horizontal" android:layout_height="wrap_content" android:layout_margin="5dip" android:id="@+id/mainscreen_item_texts">
        <ImageView android:layout_width="38dip" android:id="@+id/mainscree_news_image" android:layout_gravity="center_vertical|center_horizontal" android:layout_height="38dip" android:layout_margin="5dip"></ImageView>
        <TextView android:maxLines="2" android:layout_marginRight="5dp" android:layout_weight="1" android:layout_marginLeft="5dp" android:textSize="20sp" android:layout_height="wrap_content" android:text="Item title" android:id="@+id/mainscreen_news_title" android:layout_width="fill_parent" android:textColor="@color/black"></TextView>
    </LinearLayout>
	<TextView android:layout_height="wrap_content" android:maxLines="2" android:textColor="@color/dark_grey" android:layout_width="wrap_content" android:text="Item description" android:id="@+id/mainscreen_news_description" android:layout_margin="5dp"></TextView>



</LinearLayout>
