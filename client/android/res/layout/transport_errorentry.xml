<?xml version="1.0" encoding="utf-8"?>

<LinearLayout android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:orientation="vertical"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:background="#FFFFFF">

	<LinearLayout android:layout_gravity="clip_horizontal"
		android:orientation="horizontal" android:id="@+id/travel_summary"
		android:layout_width="fill_parent" android:layout_margin="5dip"
		android:layout_height="wrap_content">

		<TextView android:text="Data unavailable."
			android:layout_height="wrap_content" android:id="@+id/travel_summary_time"
			android:textSize="20sp" android:maxLines="2"
			android:layout_marginLeft="5dp" android:layout_marginRight="5dp"
			android:layout_width="fill_parent" android:layout_weight="1">
		</TextView>

	</LinearLayout>

</LinearLayout>
