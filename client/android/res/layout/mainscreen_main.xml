<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:orientation="vertical"
	>

	<org.pocketcampus.core.ui.ActionBar
		android:id="@+id/actionbar"
		style="@style/ActionBar"
		/>
	
	<RelativeLayout
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content"
		android:background="@drawable/food_list_header_background"
		android:orientation="horizontal"
		android:padding="3dip"
		android:gravity="right"
		android:visibility="gone"
		>
		
		<ImageView
			android:id="@+id/status_lock"
			android:src="@drawable/menu_loggedin"
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content"
			android:paddingLeft="2dip"
			android:layout_centerVertical="true"
			></ImageView>
		
		<TextView
			android:text="Logged in as Peter Jackson"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:paddingLeft="5dip"
			android:textColor="@android:color/white"
			android:layout_toRightOf="@+id/status_lock"
			android:layout_centerVertical="true"
			></TextView>
			
	</RelativeLayout>
	
	<GridView
	    android:id="@+id/gridview"
	    android:layout_width="fill_parent" 
		android:layout_height="fill_parent"
	    android:numColumns="3"
	    android:stretchMode="columnWidth"
	    android:gravity="center"
		android:background="#FFF"
		android:visibility="visible"
		android:layout_below="@+id/actionbar"
		android:listSelector="#00000000"
		/>
		
	<SlidingDrawer
		android:layout_alignParentBottom="true"
		android:layout_below="@+id/actionbar"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:id="@+id/SlidingDrawer"
		android:handle="@+id/slideHandleButton"
		android:content="@+id/contentLayout"
		>
		
		<LinearLayout
			android:id="@+id/slideHandleButton"
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content"
			android:background="@drawable/food_list_header_background"
			android:gravity="center"
			android:paddingLeft="12dip"
			android:paddingRight="12dip"
			android:paddingTop="7dip"
			android:paddingBottom="7dip"
			>
			
			<ImageView
				android:src="@drawable/notif"
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"
				></ImageView>
			
			<TextView
				android:text="@string/mainscreen_quickview"
				android:textSize="20dip"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textColor="#FFCCCCCC"
				android:paddingLeft="7dip"
				></TextView>
				
		</LinearLayout>
			
		<LinearLayout
			android:id="@+id/contentLayout"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:orientation="vertical"
			android:background="#FFFFFFFF"
			>
			
			<View
				android:background="@drawable/food_list_header_background"
				android:layout_width="fill_parent"
				android:layout_height="2dp"
				></View>
			
			<ListView
				xmlns:android="http://schemas.android.com/apk/res/android"
				android:id="@+id/mainscreen_news_list_list"
				style="@style/Theme.ListView"
				android:background="@drawable/bg"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				/>
		</LinearLayout>
		
	</SlidingDrawer>

	<!-- 
