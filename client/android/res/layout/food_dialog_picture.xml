<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="wrap_content"
	android:layout_width="wrap_content"
	android:background="#FFFFFF">

	<RelativeLayout android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/food_dia_pic_title">

		<TextView
			android:padding="10dip"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:text="@string/food_picture_dialog_title"
			android:textSize="20dip"
			android:textColor="#000000"></TextView>
	</RelativeLayout>

	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/food_dia_pic"
		android:background="@android:color/white"
		android:layout_below="@+id/food_dia_pic_title"
		android:orientation="horizontal"
		android:gravity="center"
		android:layout_centerHorizontal="true"
		android:paddingBottom="10dip">
		
		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/food_dia_pic_meal"
			android:background="@android:color/white"
			android:orientation="vertical"
			android:paddingRight="3dip"
			android:gravity="center"
			android:layout_centerHorizontal="true">
	
			<ImageButton
				android:background="@drawable/food_picture_dialog_meal_xml"
				android:id="@+id/food_picturedialog_meal"
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:gravity="center"
				android:layout_weight="1"
				android:layout_centerVertical="true"></ImageButton>
				
			<TextView
				android:text="Meal"
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:textColor="#000000"
				android:layout_centerVertical="true"></TextView>
		</LinearLayout>
		
		<LinearLayout
			android:id="@+id/food_dia_pic_queue"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:background="@android:color/white"
			android:orientation="vertical"
			android:paddingLeft="3dip"
			android:gravity="center" android:layout_centerHorizontal="true">
	
			<ImageButton
				android:id="@+id/food_picturedialog_queue"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:background="@drawable/food_picture_dialog_queue_xml"
				android:gravity="center"
				android:layout_weight="1"
				android:layout_centerVertical="true"></ImageButton>
								
			<TextView
				android:text="Queue"
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:textColor="#000000"
				android:layout_centerVertical="true"></TextView>
		</LinearLayout>
	</LinearLayout>
</RelativeLayout>