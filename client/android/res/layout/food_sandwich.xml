<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="fill_parent" android:layout_width="fill_parent"
	android:orientation="vertical" >
	
	<org.pocketcampus.core.ui.ActionBar
		android:id="@+id/actionbar" style="@style/ActionBar" />
	
	<LinearLayout
		android:id="@+id/linear_sandwich"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:layout_gravity="center" android:layout_below="@+id/actionbar" >
		
		<CheckBox 
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:clickable="false"
				android:layout_gravity="left|center" android:text="@string/food_sandwich_not_available" android:textColor="#ff0000"/>
				
				
		<CheckBox 
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:clickable="false"
				android:text="@string/food_sandwich_available" android:layout_gravity="right" android:checked="true" android:textColor="#00ff00"/>				
		
	</LinearLayout>
	
	<TextView 
		android:id="@+id/sandwich_text1"
		android:layout_gravity="center"
		android:layout_height="wrap_content" android:layout_width="wrap_content"
		android:textSize="15dip" android:textColor="#FFFFFF"
		android:text="@string/food_sandwich_information" android:layout_below="@+id/linear_sandwich"></TextView>
	
	<ListView android:id="@+id/sandwich_list" 
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:drawSelectorOnTop="false" android:fastScrollEnabled="true"
		android:cacheColorHint="#00000000" android:layout_below="@+id/sandwich_list"/>
	
</RelativeLayout>

