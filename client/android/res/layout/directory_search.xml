<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="wrap_content"
	android:layout_width="fill_parent"
	android:background="@android:color/white"
	android:padding="10dip"
	>
  
    <LinearLayout 
	    android:layout_height="wrap_content"
	    android:layout_width="fill_parent"
	    android:id="@+id/directory_ll1"
	    android:orientation="horizontal" 
	    android:gravity="center_vertical"
	    >
	       
		<!-- <TextView 
			android:id="@+id/textView2" 
			android:layout_height="wrap_content" 
			android:text="First name:"
			android:layout_width="80dip"
			></TextView> -->
		
		<EditText 
			android:layout_height="wrap_content" 
			android:id="@+id/directory_first_name_input" 
			android:layout_width="fill_parent"
			android:singleLine="true"
			android:hint="First name"
			></EditText>
			
	</LinearLayout>
    
    <LinearLayout
    	android:id="@+id/directory_ll2"
    	android:layout_height="wrap_content"
    	android:layout_width="fill_parent"
    	android:layout_below="@+id/directory_ll1"
    	android:orientation="horizontal"
    	android:gravity="center_vertical"
    	>
    	
		<!-- <TextView
	        android:id="@+id/textView1"
	        android:layout_height="wrap_content"
	        android:text="Last name:"
	        android:layout_width="80dip"
	        ></TextView> -->
	        
        <EditText
        	android:id="@+id/directory_last_name_input"
	        android:layout_height="wrap_content"
	        android:layout_width="fill_parent"
	        android:singleLine="true"
	        android:hint="Last name"
	        ></EditText>
	        
    </LinearLayout>
    
    <LinearLayout
    	android:id="@+id/directory_ll3"
	    android:visibility="gone"
	    android:layout_height="wrap_content"
	    android:layout_below="@+id/directory_ll2"
	    android:orientation="horizontal"
	    >
    
        <!-- <TextView
	        android:text="Sciper:"
	        android:layout_height="wrap_content"
	        android:id="@+id/textView3"
	        android:layout_width="80dip"
	        ></TextView> -->
        
        <EditText
	        android:inputType="number"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:id="@+id/directory_sciper_input"
	        android:singleLine="true"
	        android:hint="Sciper"
	        ></EditText>
	        
    </LinearLayout>
    
    <Button
    	android:id="@+id/directory_search_button"
	    android:text="Search"
	    android:layout_height="wrap_content"
	    android:layout_width="wrap_content"
	    android:layout_below="@+id/directory_ll3"
	    android:layout_centerInParent="true"
	    android:paddingLeft="20dip"
	    android:paddingRight="20dip"
	    ></Button>
   
</RelativeLayout>














