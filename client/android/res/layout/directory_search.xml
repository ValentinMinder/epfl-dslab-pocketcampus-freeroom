<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="wrap_content"
	android:layout_width="fill_parent"
	android:background="@android:color/white"
	android:padding="10dip"
	>
  
    <LinearLayout 
	    android:layout_height="wrap_content"
	    android:layout_width="fill_parent"
	    android:id="@+id/directory_ll1"
	    android:orientation="horizontal" 
	    android:gravity="center_vertical"
	    >
	       
		<EditText 
			android:layout_height="wrap_content" 
			android:id="@+id/directory_first_name_input" 
			android:layout_width="fill_parent"
			android:singleLine="true"
			android:hint="@string/directory_first_name"
			></EditText>
			
	</LinearLayout>
    
    <LinearLayout
    	android:id="@+id/directory_ll2"
    	android:layout_height="wrap_content"
    	android:layout_width="fill_parent"
    	android:layout_below="@+id/directory_ll1"
    	android:orientation="horizontal"
    	android:gravity="center_vertical"
    	>
    	
        <EditText
        	android:id="@+id/directory_last_name_input"
	        android:layout_height="wrap_content"
	        android:layout_width="fill_parent"
	        android:singleLine="true"
	        android:hint="@string/directory_last_name"
	        ></EditText>
	        
    </LinearLayout>
    
    <LinearLayout
    	android:id="@+id/directory_ll3"
	    android:visibility="gone"
	    android:layout_height="wrap_content"
	    android:layout_below="@+id/directory_ll2"
	    android:orientation="horizontal"
	    >
    
        <EditText
	        android:inputType="number"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:id="@+id/directory_sciper_input"
	        android:singleLine="true"
	        android:hint="@string/directory_sciper"
	        ></EditText>
	        
    </LinearLayout>
    
    <Button
    	android:id="@+id/directory_search_button"
	    android:text="@string/search"
	    android:layout_height="wrap_content"
	    android:layout_width="wrap_content"
	    android:layout_below="@+id/directory_ll3"
	    android:layout_centerInParent="true"
	    android:paddingLeft="20dip"
	    android:paddingRight="20dip"
	    ></Button>
   
</RelativeLayout>














