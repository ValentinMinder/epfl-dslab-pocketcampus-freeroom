<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	style="@style/Theme.MainLayout">

	<org.pocketcampus.core.ui.ActionBar
		android:id="@+id/actionbar" style="@style/ActionBar" />

	<RelativeLayout 
		android:layout_width="fill_parent"
		android:layout_height="fill_parent" 
		android:layout_below="@+id/actionbar">
		
		<TextView
			android:gravity="center"
			android:id="@+id/directory_emptylist"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:textSize="15dip"
			android:text="@string/directory_press_menu_to_search"
			></TextView>
		
		<ListView 
			xmlns:android="http://schemas.android.com/apk/res/android"
			android:id="@+id/directory_result_list" 
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			style="@style/Theme.ListView"
			></ListView>
		
	</RelativeLayout>



</RelativeLayout>