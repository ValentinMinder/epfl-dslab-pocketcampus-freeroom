<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="horizontal" xmlns:android="http://schemas.android.com/apk/res/android">
    <org.pocketcampus.plugin.news.LoaderImageView
    	android:layout_height="40dip"
    	android:layout_width="40dip"
    	android:id="@+id/news_item_image">
    </org.pocketcampus.plugin.news.LoaderImageView>
    
    <LinearLayout android:id="@+id/news_item_texts" android:layout_gravity="clip_horizontal" android:orientation="vertical" android:layout_margin="5dip" android:layout_height="60dip" android:layout_width="fill_parent">
        <TextView android:layout_height="wrap_content" android:id="@+id/news_item_title" android:textSize="20sp" android:layout_width="fill_parent" android:lines="1" android:ellipsize="marquee" android:text="Item title"></TextView>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/news_item_description" android:maxLines="2" android:text="Item description"></TextView>
    </LinearLayout>
  
  
  
</LinearLayout>
