<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical" xmlns:android="http://schemas.android.com/apk/res/android">
  
  
    <LinearLayout
        android:layout_gravity="clip_horizontal"
        android:orientation="horizontal"
        android:id="@+id/news_item_texts"
        android:layout_width="fill_parent"
        android:layout_margin="5dip" android:layout_height="wrap_content">
        
	    <org.pocketcampus.plugin.news.LoaderNewsImageView
	        android:layout_height="40dip"
	        android:layout_width="40dip"
	        android:id="@+id/news_item_image" android:layout_gravity="center_vertical|center_horizontal" android:layout_margin="5dp">
	    </org.pocketcampus.plugin.news.LoaderNewsImageView>
	    
	    <TextView
	       android:text="Item title"
	       android:layout_width="fill_parent"
	       android:layout_height="wrap_content"
	       android:id="@+id/news_item_title"
	       android:ellipsize="marquee"
	       android:textSize="20sp"
	       android:maxLines="2" android:layout_marginLeft="5dp" android:layout_marginRight="5dp">
	    </TextView>
    </LinearLayout>
    
    <TextView android:text="Item description" android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/news_item_description" android:layout_margin="5dp" android:maxLines="2"></TextView>
    
  
  
</LinearLayout>
