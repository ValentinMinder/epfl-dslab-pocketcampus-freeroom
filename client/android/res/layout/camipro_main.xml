<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  style="@style/Theme.MainLayout">
  
  <org.pocketcampus.core.ui.ActionBar
        android:id="@+id/actionbar" style="@style/ActionBar"/>
        
  <include
  	layout="@layout/camipro_transactions"
	android:layout_below="@+id/actionbar" />
  
  <SlidingDrawer
		android:layout_alignParentBottom="true"
		android:layout_below="@+id/actionbar"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:id="@+id/camipro_drawer"
		android:handle="@+id/camipro_drawer_handle"
		android:content="@+id/camipro_drawer_content" >
		
		<LinearLayout
			android:id="@+id/camipro_drawer_handle"
			android:layout_width="fill_parent" 
			android:layout_height="wrap_content"
			android:background="@drawable/food_list_header_background"
			android:gravity="center"
			android:padding="2dip" >
			
			<ImageView
				android:src="@drawable/notif"
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content" />
			
			<TextView
				android:text="@string/camipro_ebanking_button"
				android:textSize="20dip"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textColor="#CCC"
				android:paddingLeft="7dip" />
				
		</LinearLayout>
		
		<include
			android:id="@+id/camipro_drawer_content" 
			layout="@layout/camipro_ebanking" />
		
	</SlidingDrawer>
  
</RelativeLayout>
