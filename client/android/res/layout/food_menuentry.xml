<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/food_menuentry_list"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical">

	<TextView android:id="@+id/food_menuentry_title"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textColor="@android:color/black"
		android:textAppearance="?android:attr/textAppearanceMedium"
		android:text="testTitle"
		android:padding="6dip" />

	<LinearLayout android:id="@+id/rela1"
		android:layout_width="fill_parent" android:layout_height="fill_parent"
		android:orientation="horizontal">

		<TextView android:id="@+id/food_menuentry_content"
			android:layout_width="170dip" android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceSmall"
			android:textColor="@android:color/black" android:paddingLeft="15dip"
			android:layout_marginBottom="5dip" />

		<RelativeLayout
			android:id="@+id/food_rela1"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content">
			<LinearLayout
				android:id="@+id/food_line2"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical"
				android:layout_gravity="right"
				android:paddingLeft="10dip">

				<RatingBar
					android:id="@+id/food_menuentry_ratingIndicator"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					style="?android:attr/ratingBarStyleSmall"
					android:numStars="5"
					android:isIndicator="true"
					android:layout_marginRight="5dip"
					android:layout_alignParentRight="true"
					android:layout_alignParentBottom="true" />

				<ImageView
					android:layout_width="12dip"
					android:layout_height="fill_parent"></ImageView>
				
				<TextView
					android:id="@+id/food_menuentry_numberOfVotes"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textAppearance="?android:attr/textAppearanceSmall"
					android:layout_alignParentRight="true"
					android:textColor="@android:color/black"
					android:paddingRight="15dip"
					android:layout_marginBottom="5dip"
					android:layout_below="@+id/food_menuentry_ratingIndicator" />

			</LinearLayout>
		</RelativeLayout>
				
	</LinearLayout>

</LinearLayout>