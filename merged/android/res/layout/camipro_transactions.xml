<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/camipro_content_wrapper"
	android:paddingBottom="30dp"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:orientation="vertical" >
			
	<LinearLayout
		android:layout_height="wrap_content"
		android:layout_width="fill_parent">
	   	
		<TextView
			android:id="@+id/camipro_balance_text"
			android:text="@string/camipro_current_balance"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:background="#EEE"
			android:padding="10dp"
			style="@style/PocketCampusTheme.Secondary.Title" />
		       	
		<TextView
			android:id="@+id/camipro_balance_number"
			android:text="@string/camipro_balance_placeholder"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:background="#EEE"
			android:padding="10dp"
			style="@style/PocketCampusTheme.Secondary.Title" />
	</LinearLayout>
	   
	<TextView
		android:id="@+id/camipro_offline_transactions"
		android:text="@string/camipro_offline_transactions"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:background="#EEE"
		android:paddingBottom="10dp"
		android:paddingLeft="10dp" />
	

	<ListView
	    android:id="@+id/camipro_list"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:divider="#7D0000"
	    android:dividerHeight="1dp" />
	
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="fill_parent">
        
        <TextView
            android:id="@+id/camipro_balance_date_title"
            android:text="@string/camipro_balance_date_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="@style/PocketCampusTheme.Secondary.Title" />
                
        <TextView
            android:id="@+id/camipro_balance_date_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    
</LinearLayout>
